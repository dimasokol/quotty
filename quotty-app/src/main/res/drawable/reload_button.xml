<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <ripple android:color="#FFF">
            <item>
                <layer-list>
                    <item>
                        <shape android:shape="oval">
                            <solid android:color="?colorAccent" />
                        </shape>
                    </item>

                    <item android:drawable="@drawable/ic_refresh_64dp"
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />
                </layer-list>
            </item>
        </ripple>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#8D8D8D" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_refresh_64dp"
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="?colorPrimary" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_refresh_64dp"
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </layer-list>
    </item>

</selector>